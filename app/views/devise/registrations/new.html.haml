= render partial: "posts/top-header"

.new-user-background
  .new-user-register
    %h2 ユーザー新規登録
    = form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f|
      = render "devise/shared/error_messages", resource: resource
      .field
        = f.label :ニックネーム
        %br/
        = f.text_field :name, class: "input-field", autofocus: true
      .field
        = f.label :メールアドレス
        %br/
        = f.email_field :email, class: "input-field", autofocus: true, autocomplete: "email"
      .field
        = f.label :パスワード
        - if @minimum_password_length
          %em
            (最低6文字以上)
        %br/
        = f.password_field :password, class: "input-field", autocomplete: "new-password"
      .field
        = f.label :パスワード確認
        %br/
        = f.password_field :password_confirmation, class: "input-field", autocomplete: "new-password"
      .actions
        = f.submit "新規登録", class: "register-btn"
    = render "devise/shared/links"

= render partial: "posts/top-footer"
