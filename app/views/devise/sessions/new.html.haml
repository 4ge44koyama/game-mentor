= render partial: "posts/top-header"

.login-user-background
  .login-user-box
    %h2.sessions ログイン
    = form_with model: @user, url: user_session_path, id: 'session_user', class: 'session_user', local: true do |f|
      .field_sessions
        = f.label :email, "メールアドレス", class:"sessions_label"
        %br/
        = f.email_field :email, autofocus: true, class: "input-field", autocomplete: "email"
      .field_sessions
        = f.label :password, "パスワード", class:"sessions_label"
        %br/
        = f.password_field :password, class: "input-field", autocomplete: "current-password"
      - if devise_mapping.rememberable?
        .field_sessions#check
          = f.check_box :remember_me
          = f.label :remember_me, "登録情報を保存"
      .actions_sessions
        = f.submit "ログイン！", class:"user-login-btn"
    = render "devise/shared/links"

= render partial: "posts/top-footer"
