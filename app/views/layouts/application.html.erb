<!DOCTYPE html>
<html>
  <head>
    <title>GameMentor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class='header'>
      <div class='header__menu'>
        <div class='lists'>
          <%= link_to "G-MEN", root_path, class: "logo-link" %>
          <div class='logo-home'>
            ゲーミングメンターサービス
          </div>
        </div>
      </div>
      <div class='header__right'>
        <div class='header__right__search'>
          検索窓
        </div>
        <% if user_signed_in? %>
          <div class='header__right__menu'>
            <%= link_to "新規投稿", new_post_path, class: "header__right__menu-btn" %>
          </div>  
          <div class='header__right__menu'>  
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "header__right__menu-btn" %>
          </div>  
        <% else %>
          <div class='header__right__menu'>
            <%= link_to "ログイン", new_user_session_path, class: "header__right__menu-btn" %>
          </div>
          <div class='header__right__menu'>
            <%= link_to "新規登録", new_user_registration_path, class: "header__right__menu-btn" %>
          </div>
        <% end %>
      </div>
    </header>
    
    <div class="main">
      <%= yield %>
    </div>
    
    <footer class='footer'>
      <small>©️ Shigeyoshi Koyama</small>
    </footer>
  </body>
</html>
